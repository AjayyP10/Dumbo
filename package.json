{
  "scripts": {
    "build": "npm --prefix frontend run build",
    "lint:backend": "python -m flake8 backend",
    "lint": "npm run lint:backend && cd frontend && npm run lint",
    "format": "cd frontend && npm run format",
    "dev": "npm --prefix frontend run dev",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "jest --config frontend/jest.config.js --passWithNoTests",
    "test:backend": "python -m pytest -q",
    "prepare": "husky"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/axios": "^0.9.36",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.9.2",
    "@types/react-router-dom": "^5.3.3",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.py": [
      "python -m black",
      "python -m isort",
      "python -m flake8"
    ],
    "frontend/src/**/*.{ts,tsx}": [
      "cd frontend; npm run lint -- --fix"
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
